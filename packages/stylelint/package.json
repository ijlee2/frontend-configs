{
  "name": "@ijlee2-frontend-configs/stylelint",
  "version": "1.0.0",
  "description": "Configuration for stylelint",
  "repository": {
    "type": "git",
    "url": "https://github.com/ijlee2/frontend-configs.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./default/index.mjs",
    "./css-modules": "./css-modules/index.mjs"
  },
  "scripts": {
    "lint": "prettier \"**/*.mjs\" --cache --check",
    "lint:fix": "prettier \"**/*.mjs\" --cache --write"
  },
  "dependencies": {
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3"
  },
  "devDependencies": {
    "@ijlee2-frontend-configs/prettier": "workspace:*",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "prettier": "^3.0.0",
    "stylelint": "^16.18.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": false
    },
    "stylelint": {
      "optional": false
    }
  },
  "engines": {
    "node": "20.* || >= 22"
  }
}

{
  "name": "@ijlee2-frontend-configs/eslint-config-node",
  "version": "2.4.1",
  "description": "Configuration for eslint (Node)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ijlee2/frontend-configs.git",
    "directory": "packages/eslint/node"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./javascript": "./javascript/index.mjs",
    "./typescript": "./typescript/index.mjs"
  },
  "scripts": {
    "format": "prettier . --cache --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix"
  },
  "dependencies": {
    "@babel/core": "^7.29.0",
    "@babel/eslint-parser": "^7.28.6",
    "@eslint/js": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.54.0"
  },
  "devDependencies": {
    "@ijlee2-frontend-configs/prettier": "workspace:*",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1"
  },
  "peerDependencies": {
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": "20.* || >= 22"
  }
}

{
  "extends": "@ijlee2-frontend-configs/typescript/ember",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "my-v1-app/tests/*": [
        "tests/*"
      ],
      "my-v1-app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    "skipLibCheck": true,
    "types": [
      "ember-source/types"
    ]
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }
}
